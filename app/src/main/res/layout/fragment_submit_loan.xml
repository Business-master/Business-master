<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stand_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/banner" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_circle_8"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="如有贷款需求请填写此表"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="企业贷款现状表"
                    android:textColor="@color/color_0dadd5"
                    android:textSize="16sp" />

                <EditText
                    style="@style/assis_hint_edit"
                    android:layout_marginTop="15dp"
                    android:hint="企业名称" />

                <EditText
                    style="@style/assis_hint_edit"
                    android:layout_marginTop="10dp"
                    android:hint="贷款类型" />

                <EditText
                    style="@style/assis_hint_edit"
                    android:layout_marginTop="10dp"
                    android:hint="贷款行" />

                <EditText
                    style="@style/assis_hint_edit"
                    android:layout_marginTop="10dp"
                    android:hint="贷额" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/assis_hint_edit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="贷期" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        style="@style/assis_hint_edit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="利率" />
                </LinearLayout>

                <EditText
                    style="@style/assis_hint_edit"
                    android:layout_marginTop="10dp"
                    android:hint="联系人姓名" />

                <EditText
                    style="@style/assis_hint_edit"
                    android:layout_marginTop="10dp"
                    android:hint="联系人手机号" />

                <Button
                    android:id="@+id/btnSure"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_below="@+id/rl_1"
                    android:layout_marginLeft="18.0dip"
                    android:layout_marginRight="18.0dip"
                    android:layout_marginTop="30.0dip"
                    android:background="@drawable/blue_circle_5"
                    android:text="提交"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>