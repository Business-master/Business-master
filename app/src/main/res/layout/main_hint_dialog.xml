<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@drawable/main_hint_dialog_rectange"
    android:layout_height="match_parent">
    <LinearLayout
       android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="260dp"
        android:layout_height="195dp">
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:gravity="center"
            android:text="提示"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/msg_mhd"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_666666"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="10dp"
            android:gravity="center"
            android:text="即将召开会议有变动\n请查看!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ensure_mhd"
            android:clickable="true"
            android:layout_gravity="center"
            android:background="@drawable/apply_ensure"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_fffffff"
            android:textSize="16sp"
            android:lineSpacingExtra="10dp"
            android:gravity="center"
            android:text="确定"
            android:layout_width="210dp"
            android:layout_height="35dp" />
    </LinearLayout>

</RelativeLayout>